{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "rem-property",
  "title": "Property",
  "description": "A set of one or more parcels that constitute a single logic piece of real estate",
  "type": "object",
  "allOf": [
    { "$ref": "./common.json#/definitions/commonProps" },
    { "properties": {
       "name": { "type": "string" },
       "description": { "type": "string" },
       "acreage": { "type": "number" },
       "city": { "type": "string" },
       "county": { "type": "string" },
       "state": { "type": "string", "pattern": "^[A-Z]{2}$" },
       "owners": {
         "type": "array",
         "items": {
           "type": "object",
           "properties": {
             "id": { "$ref": "./common.json#/definitions/oid" },
             "portion": { "type": "number" }
           }
         }
       },
       "pinNumbers": {
         "type": "array",
         "items": { "type": "string" }
       },
       "propType": { "enum": ["residential", "commercial", "industrial", "land" ] },
       "desiredRentCents": { "type": "integer" },
       "desiredSalesPriceDollars": { "type": "integer" },
       "noteIds": {
         "type": "array",
         "items": { "$ref": "common.json#/definitions/oid" }
       },
       "leaseIds": {
         "type": "array",
         "items": { "$ref": "common.json#/definitions/oid" }
       },
       "contactIds": {
         "type": "array",
         "items": { "$ref": "common.json#/definitions/oid" }
       },
       "mediaIds": {
         "type": "array",
         "items": { "$ref": "common.json#/definitions/oid" }
       },
       "insurancePolicyIds": {
         "type": "array",
         "items": { "$ref": "./common.json#/definitions/oid" }
       },
       "tags": {
         "type": "array",
         "items": { "type": "string" }
       },
       "taxPropInfo": {
         "type": "object",
         "name": "pin",
         "additionalProperties": {
           "type": "object",
           "properties": {
             "ownerName": {"type": "string" },
             "ownerAddress": {"type": "string" },
             "situsAddress": {"type": "string" },
             "taxDistrict": {"type": "string" },
             "propertyClass": {"type": "string" },
             "neighborhood": {"type": "string" },
             "zoning": {"type": "string" },
             "legalDescription": {"type": "string" },
             "totalAppraisedCents": {"type": "integer" },
             "landAppraisedCents": {"type": "integer" },
             "buildingAppraisedCents": {"type": "integer" },
             "miscAppraisedCents": {"type": "integer" },
             "assessmentDate": {"type": "string", "format": "date-time" }
           }
         }
       },
       "taxBills": {
         "type": "object",
         "name": "pin",
         "additionalProperties": {
           "type": "object",
           "description": "The PIN of each parcel",
           "name": "year",
           "additionalProperties": {
             "type": "object",
             "properties": {
               "totalAssessedCents": { "type": "integer" },
               "landAssessedCents": { "type": "integer" },
               "buildingAssessedCents": { "type": "integer" },
               "miscAssessedCents": { "type": "integer" },
               "dueDate": { "type": "string", "format": "date" },
               "lineItems": {
                 "type": "array",
                 "items": {
                   "type": "object",
                   "properties": {
                     "description": {"type": "string"},
                     "amountCents": {"type": "integer"}
                   }
                 }
               },
               "payments": {
                 "type": "array",
                 "items": {
                   "type": "object",
                   "properties": {
                      "paymentDate": {"type": "string", "format": "date-time"},
                      "amountCents": {"type": "integer"}
                   }
                 }
               }
             }
           }
         }
       },
       "parcelDataRefreshRequested": {
         "type": "boolean",
         "description": "If set to true, the GIS parcel information for this property should be refreshed"
       },
       "parcelData": {
         "type": "object",
         "name": "pin",
         "additionalProperties": {
           "type": "object",
           "properties": {
             "ownerName": { "type": "string" },
             "acreage": { "type": "number" },
             "streetAddress": { "type": "string" },
             "boundaryWKT": { "type": "string" }
           }
         }
       },
       "taxRefreshRequested": {"type": "boolean" }
    }}
  ]
}
