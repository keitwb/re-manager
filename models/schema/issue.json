{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "rem-issue",
  "title": "Issue",
  "description": "An issue on a property",
  "$ref": "#/definitions/issue",
  "definitions": {
    "issue": {
      "allOf": [
        { "$ref": "./common.json#/definitions/commonProps" },
        { "properties": {
           "title": { "type": "string" },
           "description": {"type": "string"},
           "updates": {
             "type": "array",
             "items": {"$ref": "note.json#" }
           },
           "tags": {
             "type": "array",
             "items": { "type": "string" }
           },
           "mediaIds": {
             "type": "array",
             "items": { "$ref": "common.json#/definitions/oid" }
           }
        }}
      ]
    }
  }
}
