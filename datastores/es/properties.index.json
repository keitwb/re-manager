{
  "settings": {
    "index": {
      "max_ngram_diff": 12
    },
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "ngramtokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "default_search": {
          "tokenizer": "standard",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "ngramtokenizer": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 12,
          "token_chars": []
        }
      }
    }
  },
  "mappings": {
      "dynamic": false,
      "properties": {
        "name": {
          "type": "text",
          "term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            }
          }
        },
        "description": {
          "type": "text",
          "term_vector": "with_positions_offsets"
        },
        "propType": {
          "type": "keyword"
        },
        "acreage": {
          "type": "float"
        },
        "city": {
          "type": "keyword",
          "fields": {
            "suggest": {
              "type": "search_as_you_type"
            }
          }
        },
        "state": {
          "type": "keyword",
          "fields": {
            "suggest": {
              "type": "search_as_you_type"
            }
          }
        },
        "county": {
          "type": "keyword",
          "index_options": "offsets"
        },
        "tags": {
          "type": "keyword",
          "fields": {
            "suggest": {
              "type": "search_as_you_type"
            }
          }
        },
        "parcelData": {
          "type": "object",
          "properties": {
            "boundaryWKT": {
              "type": "geo_shape"
            },
            "streetAddress": {
              "type": "text"
            },
            "ownerName": {
              "type": "text"
            }
          }
        },
        "pinNumbers": {
          "type": "keyword"
        }
      }
  }
}
