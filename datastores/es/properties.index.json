{
  "settings": {
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "ngramtokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "default_search": {
          "tokenizer": "lowercase"
        }
      },
      "tokenizer": {
        "ngramtokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 10,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "name": {
          "type": "text",
					"term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            }
          }
        },
        "description": {
          "type": "text",
					"term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            }
          }
        },
        "city": {
          "type": "text",
					"term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            },
            "suggest": {
              "type": "completion"
            }
          }
        },
        "state": {
          "type": "text",
					"term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            },
            "suggest": {
              "type": "completion"
            }
          }
        },
        "county": {
          "type": "text",
					"term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            },
            "suggest": {
              "type": "completion"
            }
          }
        },
        "tags": {
          "type": "text",
					"term_vector": "with_positions_offsets",
          "fields": {
            "keyword": {
              "type":  "keyword",
              "ignore_above": 256
            },
            "suggest": {
              "type": "completion"
            }
          }
        }
      }
    }
  }
}
