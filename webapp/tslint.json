{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
    "tslint-sonarts"
	],
	"rules": {
		"interface-name": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "cognitive-complexity": [true, 20],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "functions": "never",
          "objects": "always",
          "arrays": "always"
        },
        "esSpecCompliant": true
      }],
    "arrow-parens": [true, "ban-single-arg-parens"]
	}
}
