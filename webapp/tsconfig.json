{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "vue-shim.d.ts"
  ],
  "compilerOptions": {
    "lib": [
        "dom",
        "es2016"
    ],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
