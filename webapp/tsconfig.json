{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "lib": [ "dom", "es2017" ],
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "typeRoots": ["typings", "node_modules/@types"],
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
