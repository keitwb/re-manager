#!/bin/bash

# Resets the Mongo database and loads development fixtures

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $SCRIPT_DIR/../..

kubectl="kubectl --context minikube"

#./dc stop mongodb && ./dc rm -fv mongodb && docker volume rm rem_mongodata && ./dc up -d mongodb
TAG=dev make mongodb-setup
$kubectl run mongodb-setup -it --rm --attach --image quay.io/rem/mongodb-setup:dev
$kubectl run dev-fixtures -it --rm --attach --image quay.io/rem/mongodb-setup:dev -- /opt/dev/load-fixtures.sh
